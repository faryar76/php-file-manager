<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true"
         stopOnFailure="false"
         verbose="true">
    <testsuites>
        <testsuite name="feature">
            <directory suffix='.php'>
                ./tests/
            </directory>
        </testsuite>
    </testsuites>
   <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>